<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @garden.banner_url %>);">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>

<div class="container mt-3">

  <div class="cards">
    <% @garden.plants.each do |plant| %>

      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= plant.image_url %>)">
        <div class="card-tags">
          <% plant.tags.each do |tag| %>
            <span><%= tag.name %></span>
          <% end %>
          <span>
            <%= link_to new_plant_plant_tag_path(plant) do %>
              <i class='fas fa-plus-circle'></i>
            <% end %>
          </span>
        </div>
        <%= plant.name %>
        <%= link_to '+', plant_path(plant), class: 'card-remove-link', method: :delete, data: { confirm: 'Are you sure?' } %>

      </div>

    <% end %>
  </div>

</div>

<div class="container mt-3 mb-5">

  <div class="row justify-content-center">
    <div class="col-md-4">
      <h4>Create new Plant</h4>
      <%= simple_form_for [@garden, @plant] do |form| %>
        <%= form.input :name %>
        <%= form.input :image_url %>
        <%= form.submit 'Create new Plant', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>



</div>